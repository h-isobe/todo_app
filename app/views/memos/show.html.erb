<div class="container">
  <div class="row">

    <div class="col-xs-2 folder-list">
      <h1>フォルダ一覧</h1>

      <table class="tabel">
        <tbody>
          <% @folders.each do |folder| %>
            <tr>
              <td>
                <i class="fas fa-tag"></i>
                <%= folder.title %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="new-memo">
        <%= form_with model: @folder do |f| %>
          <%= f.label :新規フォルダ %>
          <%= f.text_field :title %>
          <%= f.submit "作成" %>
        <% end %>
      </div>
      
    </div>

    <div class="col-xs-3">
      <h1>メモ一覧</h1>

      <table class="table">
        <thead>
          <tr>
            <td></td>
            <td>タイトル</td>
            <td>内容</td>
          </tr>
        </thead>
        <tbody>
        <% @memos.each do |memo| %>
          <tr>
            <td>
              <% if memo.checked_by?(memo) %>
                <%= link_to memo_checks_path(memo), method: :delete do %>
                  <i class="far fa-check-square"></i>
                <% end %>
              <% else %>
                <%= link_to memo_checks_path(memo), method: :post do %>
                  <i class="far fa-square"></i>
                <% end %>
              <% end %>
            </td>
            <td><%= memo.title %></td>
            <td>
              <%= link_to memo_path(memo) do %>
                <%= memo.content.truncate(20) %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to new_memo_path do %>
        <i class="far fa-edit fa-lg" ></i>
      <% end %>
    </div>

    <div class="col-xs-6">

      <h1>メモ詳細</h1>
        <table class="table">
          <thead>
            <tr>
              <td><%= @memo.title %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @memo.content %></td>
            </tr>
          </tbody>
        </table>

      <%= link_to "戻る", memos_path %>
    </div>

  </div>
</div>